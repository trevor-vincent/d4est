[initial_mesh]
min_quadrants = -1
min_level = 0
fill_uniform = 1
region0_deg = 2
region0_deg_quad_inc = 0
region1_deg = 2
region1_deg_quad_inc = 0
region2_deg = 2
region2_deg_quad_inc = 0
keep_quad_fams_together = 0;
refine_per_region_at_start = 1

region0_number_of_refines = 0
region0_partition_after_refine = 0
region0_refine_order = 2

region1_number_of_refines = 0
region1_partition_after_refine = 0
region1_refine_order = 1

region2_number_of_refines = 1
region2_partition_after_refine = 1
region2_refine_order = 0

load_from_checkpoint = 0
checkpoint_type = D4EST_CHKPT_HISTORY_H5
checkpoint_prefix = checkpoint
checkpoint_number = 5
initial_checkpoint_number = 1

[flux]
name = sipg
sipg_penalty_prefactor = 1.1
sipg_flux_h = H_EQ_J_DIV_SJ_MIN_LOBATTO
sipg_penalty_fcn = maxp_sqr_over_minh

[mesh_parameters]
face_h_type = FACE_H_EQ_J_DIV_SJ_QUAD
volume_h_type = VOL_H_EQ_DIAM
max_degree = 10

[d4est_vtk]
filename = d4est_test_vtk
geometry_section = geometry
output_type = ascii
grid_type = dg
write_tree = 1
write_level = 1
write_rank = 1
wrap_rank = 0
write_deg = 1

[geometry]
name = cubed_sphere
R0 = 1
R1 = 2
R2 = 3
compactify_outer_shell = 0
compactify_inner_shell = 0
DX_compute_method = analytic
JAC_compute_method = numerical

